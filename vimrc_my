filetype off
set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()
Plugin 'gmarik/Vundle.vim'
Plugin 'L9'                " vim 脚本库
Plugin 'mtth/locate.vim'   " 文件搜索

Plugin 'godlygeek/tabular' " 表格对其

Plugin 'taglist.vim'
let Tlist_Show_One_File=1                  " 不同时显示多个文件的tag，只显示当前文件的
let Tlist_Exit_OnlyWindow=1                " 如果taglist窗口是最后一个窗口，则退出vim
" let Tlist_Auto_Open = 1                  " 启动VIM，自动打开taglist
let Tlist_Ctags_Cmd='/usr/local/bin/ctags' " 将taglist与ctags关联
let Tlist_Use_Right_Window = 1             " taglist窗口居左
let Tlist_GainFocus_On_ToggleOpen = 0      " 打开后不获取焦点到taglist窗口


Plugin  'The-NERD-tree'
let NERDTreeWinPos='left'       "打开后居左
let NERDChristmasTree=1
let NERDTreeDirArrows=1
"nmap <F2> :NERDTree <CR>

Plugin 'comments.vim'      " 快速注释
Plugin 'minibufexplorerpp' " 顶部标签

Plugin 'python.vim'        " python插件
set filetype=python
au BufNewFile,BufRead *.py,*.pyw setf python

Plugin 'pyflakes.vim'      "python 语法检查

Plugin 'Pydiction'         "代码补全
let g:pydiction_location =  '$HOME/.vim/bundle/Pydiction/complete-dict'
let g:pydiction_menu_height = 3

call vundle#end()
filetype plugin indent on

"----------其他相关-----------------
set autoindent " same level indent
set smartindent " next level indent
set expandtab
set tabstop=4
set shiftwidth=4
set softtabstop=4
set fenc=utf-8
set fencs=utf-8,gb2312
set nu
"---------快捷键--------------------
map <F5> :!python % <CR>
